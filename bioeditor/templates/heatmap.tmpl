<button class="btn btn-default" id="heatmap-collapseAll-btn">CollapseAll</button>
<button class="btn btn-default" id="heatmap-expandAll-btn">ExpandAll</button>
<div id="heatmap-body">
    <div style="overflow:hidden">
        <div style="display:inline-block;width:400px"></div>
        <div class="pull-right">
            {{#each header}}
                {{#createHeader this}}
                    <div class="heatmap-column {{columnClass}}">
                        {{columnName}}
                    </div>
                {{/createHeader}}
            {{/each}}
        </div>
    </div>
    <ul class="tree heatmap-ul">
        {{> create-children}}
    </ul>
</div>
